<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Manajemen User</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function(user) { %>
                                <tr>
                                    <td><%= user.username %></td>
                                    <td>
                                        <span class="badge bg-<%= user.role === 'super_admin' ? 'danger' : (user.role === 'admin' ? 'warning' : 'info') %>">
                                            <%= user.role %>
                                        </span>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <div class="mt-4">
                    <h5>Informasi Role:</h5>
                    <ul>
                        <li><strong>Super Admin:</strong> Memiliki akses penuh ke semua fitur termasuk manajemen permission</li>
                        <li><strong>Admin:</strong> Dapat mengakses manajemen user dan semua fitur todo</li>
                        <li><strong>User:</strong> Hanya dapat mengakses fitur todo sesuai permission yang diberikan</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>