<div class="container">
  <div class="row mb-3">
    <div class="col">
      <h2>Daftar Pesanan - <%= pelanggan.nama %></h2>
      <p class="text-muted">
        Email: <%= pelanggan.email %><br>
        Telepon: <%= pelanggan.telepon %>
      </p>
    </div>
    <div class="col text-end">
      <a href="/pesanan/create?pelanggan_id=<%= pelanggan.id %>" class="btn btn-primary">Tambah Pesanan</a>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <table id="datatable" class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Tanggal</th>
            <th>Status</th>
            <th>Pembayaran</th>
            <th>Pengiriman</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% pesanan.forEach(function(order) { %>
            <tr>
              <td><%= order.id %></td>
              <td><%= new Date(order.tanggal_pesanan).toLocaleDateString('id-ID') %></td>
              <td>
                <span class="badge bg-<%= order.status === 'selesai' ? 'success' : 
                                      order.status === 'diproses' ? 'primary' : 
                                      order.status === 'dibatalkan' ? 'danger' : 'warning' %>">
                  <%= order.status.toUpperCase() %>
                </span>
              </td>
              <td>
                <% if (order.status !== 'dibatalkan') { %>
                  <a href="/pembayaran/<%= order.id %>" class="btn btn-sm btn-info">Lihat</a>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <% if (order.status !== 'dibatalkan') { %>
                  <a href="/pengiriman/<%= order.id %>" class="btn btn-sm btn-info">Lihat</a>
                <% } else { %>
                  -
                <% } %>
              </td>
              <td>
                <div class="btn-group" role="group">
                  <a href="/pesanan/<%= order.id %>" class="btn btn-sm btn-info">Detail</a>
                  <% if (order.status === 'pending') { %>
                    <form action="/pesanan/<%= order.id %>?_method=DELETE" method="POST" class="d-inline" 
                          onsubmit="return confirm('Apakah Anda yakin ingin membatalkan pesanan ini?')">
                      <button type="submit" class="btn btn-sm btn-danger">Batalkan</button>
                    </form>
                  <% } %>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-3">
    <a href="/pelanggan" class="btn btn-secondary">Kembali ke Daftar Pelanggan</a>
  </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

<script>
  $(document).ready(function() {
    $('#datatable').DataTable({
      language: {
        url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/id.json'
      }
    });
  });
</script>