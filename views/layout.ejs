<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : '' %> - RBAC System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    .sidebar {
      min-height: 100vh;
      box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
      color: #333;
      padding: .5rem 1rem;
      border-radius: .25rem;
      margin: .25rem 0;
    }

    .sidebar .nav-link:hover {
      background-color: rgba(0, 0, 0, .05);
    }

    .sidebar .nav-link.active {
      color: #fff;
      background-color: #0d6efd;
    }

    .sidebar .nav-link i {
      margin-right: .5rem;
    }

    main {
      padding: 1.5rem;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <div class="text-center mb-4">
            <h5>RBAC System</h5>
            <% if(user) { %>
            <p class="text-muted small mb-0">Selamat datang,</p>
            <p class="fw-bold mb-0"><%= user.username %></p>
            <% } %>
          </div>

          <% if(user) { %>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link <%= typeof title !== 'undefined' && title === 'Dashboard' ? 'active' : '' %>" href="/dashboard">
                <i class="bi bi-speedometer2"></i> Dashboard
              </a>
            </li>

            <% if (userHasPermission('manage_products')) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Produk') ? 'active' : '' %>" href="/produk">
                  <i class="bi bi-box-seam"></i> Produk
                </a>
              </li>
            <% } %>

            <% if (userHasPermission('manage_customers')) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Pelanggan') ? 'active' : '' %>" href="/pelanggan">
                  <i class="bi bi-people"></i> Pelanggan
                </a>
              </li>
            <% } %>

            <% if (userHasPermission('manage_orders')) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Pesanan') ? 'active' : '' %>" href="/pesanan">
                  <i class="bi bi-cart3"></i> Pesanan
                </a>
              </li>
            <% } %>

            <% if (userHasPermission('manage_users')) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Pengguna') ? 'active' : '' %>" href="/admin/users">
                  <i class="bi bi-person-badge"></i> Manajemen Pengguna
                </a>
              </li>
            <% } %>

            <% if (userHasPermission('assign_permissions')) { %>
              <li class="nav-item">
                <a class="nav-link <%= typeof title !== 'undefined' && title.includes('Role') ? 'active' : '' %>" href="/admin/roles">
                  <i class="bi bi-shield-lock"></i> Role & Permission
                </a>
              </li>
            <% } %>

            <li class="nav-item mt-3">
              <a class="nav-link text-danger" href="/logout">
                <i class="bi bi-box-arrow-right"></i> Logout
              </a>
            </li>
          </ul>
          <% } %>
        </div>
      </div>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (success && success.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <%- body %>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>